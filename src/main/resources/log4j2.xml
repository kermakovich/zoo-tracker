<Configuration>
  <Properties>
    <Property name="LOG_PATTERN">
      [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
    </Property>
    <Property name="BASE_PATH">
      ./logs
    </Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
          pattern="%style{%d{ISO8601}}{white} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n%throwable"/>
    </Console>
    <RollingFile name="FileAppender" fileName="${BASE_PATH}/zoo-tracker.log" filePattern="${BASE_PATH}/zoo-tracker-%d{yyyy-MM-dd}.log">
      <PatternLayout>
        <Pattern>${LOG_PATTERN}</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileAppender"/>
    </Root>
    <Logger name="solvd.ermakovich" level="trace"/>
  </Loggers>
</Configuration>
